@model Deck

@{
    Layout = "_LayoutContainerNarrow";
    ViewData["Title"] = $"Edit {Model.Name} - {Model.Subject?.Name}";
}

<h1 class="mb-3">Edit @Model.Name</h1>

<form method="post" class="table">
    <input type="hidden" asp-for="DeckId" value="@Model.DeckId"/>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label><span>*</span>
        <input asp-for="Name" autocomplete="off" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" autocomplete="off" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Deck" asp-action="Details" asp-route-deckId="@Model.DeckId" class="btn btn-secondary">Cancel</a>
</form>